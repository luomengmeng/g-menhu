
	<div class="row">
	                <div class="col-lg-12">
	                    <h2 class="page-header">文章列表</h2>
	                    <a href="/backend/articles/new">添加文章</a>
	                </div>
	                <!-- /.col-lg-12 -->
	</div>
<div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>文章序号</th>
                                            <th>文章标题</th>
                                            <th>文章类别</th>
                                            <th>是否显示</th>
                                            <th>是否首页显示</th>
                                            <th>添加时间</th>
                                            <th>操作<%=@category%></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @articles.each do |a| %>
                                        <tr>
                                          <td><%= a.id %></td>
                                          <td><%= a.title %></td>
                                          <td><%=  a.categories_id %></td>
                                          <td><%= (a.status)==1?"是":"否" %></td>
                                          <td><%= (a.home)?"是":"否" %></td>
                                          <td><%= a.created_at.strftime('%Y-%m-%d') %></td>
                                          <td>
                                            <%= link_to '编辑' , edit_backend_article_path(a) %>
                                            <%= link_to '删除' , backend_article_path(a), :method => 'delete', data:  {:confirm => '确定要删除吗？'} %>
                                          </td>
                                        </tr>
                                      <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>

