
	<div class="row">
	                <div class="col-lg-12">
	                    <h2 class="page-header">分类列表</h2>
	                    <a href="/backend/categories/new">添加分类</a>
	                </div>
	                <!-- /.col-lg-12 -->
	</div>
<div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>类别序号</th>
                                            <th>类别名称</th>
                                            <th>添加时间</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @categorys.each do |a| %>
                                        <tr>
                                          <td><%= a.id %></td>
                                          <td><%= a.name %></td>
                                          <td><%= a.created_at.strftime('%Y-%m-%d') %></td>
                                          <td>
                                            <%= link_to '编辑' , edit_backend_category_path(a) %>
                                            <%= link_to '删除' , backend_category_path(a), :method => 'delete', data:  {:confirm => '确定要删除吗？'} %>
                                          </td>
                                        </tr>
                                      <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>

