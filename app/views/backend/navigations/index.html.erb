
  <div class="row">
                  <div class="col-lg-12">
                      <h2 class="page-header">全部城市平台列表</h2>
                      <p><a href="/backend/navigations/new" class="btn btn-primary">添加平台</a></p>
                  </div>
                  <!-- /.col-lg-12 -->
  </div>
<div class="col-lg-12">
    <div class="panel panel-default">
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>平台序号</th>
                            <th>平台名称</th>
                            <th>省份名称</th>
                            <th>平台添加时间</th>
                            <th>操作<%=@category%></th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @navigations.each do |a| %>
                        <tr>
                          <td><%= a.id %></td>
                          <td><%= a.name %></td>
                          <td><%= a.province.try(:name) %></td>
                          <td><%= a.created_at.strftime('%Y-%m-%d') %></td>
                          <td>
                            <%= link_to '编辑' , edit_backend_navigation_path(a) %>
                            <%= link_to '删除' , backend_navigation_path(a), :method => 'delete', data:  {:confirm => '确定要删除吗？'} %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
                <%= will_paginate @navigations %>
            </div>
        </div>
    </div>
</div>

