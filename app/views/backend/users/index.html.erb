
	<div class="row">
	                <div class="col-lg-12">
	                    <h2 class="page-header">用户列表</h2>
	                    <a href="/backend/users/new">添加用户</a>
	                </div>
	                <!-- /.col-lg-12 -->
	</div>
<div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>用户ID</th>
                                            <th>用户昵称</th>
                                            <th>真实姓名</th>
                                            <th>用户状态</th>
                                            <th>用户类别</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @users.each do |a| %>
                                        <tr>
                                          <td><%= a.id %></td>
                                          <td><%= a.nickname %></td>
                                          <td><%= a.name %></td>
                                          <td><%= (a.status == 1) ?"启用":"暂停"%></td>
                                          <td><%= (a.account_type == 1) ?"前台用户":"后台用户"%></td>
                                          <td>
                                            <%= link_to '编辑' , edit_backend_user_path(a) %>
                                            <%= link_to '删除' , backend_user_path(a), :method => 'delete', data:  {:confirm => '确定要删除吗？'} %>
                                          </td>
                                        </tr>
                                      <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>

